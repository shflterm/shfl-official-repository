{
    "configurations": [
        {
            "type": "command",
            "name": "Init",
            "program": "cmake",
            "args": ["-B", "build", "-S", ".", "-DCMAKE_TOOLCHAIN_FILE=vcpkg/scripts/buildsystems/vcpkg.cmake", "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"]
        },
        {
            "type": "command",
            "name": "Build",
            "program": "cmake",
            "args": ["--build", "build"]
        },
        {
            "type": "command",
            "name": "Run",
            "program": "./build/src/shuffle",
            "dependsOn": ["Build"]
        }
    ]
}